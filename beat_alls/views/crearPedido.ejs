<html lang="es">
<head>
	<meta charset="UTF-8">
    <meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="Responsive Bootstrap4 Shop Template, https://imransdesign.com/">
	<link rel="shortcut icon" type="image/png" href="/assets/images/Imagen2.png">
    <link rel="stylesheet" href="/assets/css/formulario.css">
    <title><%= titulo %></title> 
</head>
<header>
    <%- include('./layout/nav.ejs'); %>
</header>

<header>
    <%- include('./layout/diseño.ejs'); %>
</header>

<header>
    <%- include('./layout/diseñoregistro.ejs'); %>
</header>
<body>
    <div class="cart-section mt-50 mb-50">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-md-12">
					<div class="cart-table-wrap">
                        <table class="cart-table">
                            <thead class="cart-table-head">
                                <tr class="table-head-row">
                                    <th class="product-name">Nombre</th>
                                    <th class="product-name">Descripción</th>
                                    <th class="product-price">Cantidad</th>
                                    <th class="product-quantity">Precio unitario</th>
                                    <th class="product-total">Acumulado</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% consultar_Carrito.forEach(carrito => { %>
                                    <tr class="table-body-row">
                                        <td><%= carrito.Nombre_producto %></td>
                                        <td><%= carrito.Descripcion %></td>
                                        <td><%= carrito.Cantidad_producto %></td>
                                        <td><%= carrito.Precio_unitario_producto %></td>
                                        <td><%= carrito.Precio_total_productos %></td>
                                    </tr>
                                <% }); %>
                                <tr class="table-body-row">
                                    <th class="product-name" style="text-align: center;">Total a pagar</th>
                                </tr>
                                <tr class="table-body-row">
                                    <td><%= totalPagar %></td>
                                </tr>
                                <tr class="table-body-row">
                                    <td class="product-total"><button type="button" style="border-radius: 15px;"><a href="/crearPedido" style="text-decoration: none; color: black;">Finalizar pedido</a></button></td>
                                </tr>
                            </tbody>
                        </table>
                    <br>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
<footer>
    <%- include('./layout/footer.ejs'); -%>
</footer>
